{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/UI/components"],
      "@components/*": ["src/UI/components/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@context": ["src/context"],
      "@context/*": ["src/context/*"],
      "@api": ["src/http-requests"],
      "@api/*": ["src/http-requests/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@modules": ["src/UI/modules"],
      "@modules/*": ["src/UI/modules/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@containers": ["src/UI/containers"],
      "@containers/*": ["src/UI/containers/*"],
      "@common": ["src/UI/common"],
      "@common/*": ["src/UI/common/*"],
      "@mocks": ["src/__mocks"],
      "@mocks/*": ["src/__mocks/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@decorators": ["src/decorators"],
      "@decorators/*": ["src/decorators/*"],
      "@modals": ["src/UI/modals"],
      "@modals/*": ["src/UI/modals/*"],
      "@css": ["src/css"],
      "@css/*": ["src/css/*"],

      "@globalStyled": ["src/globalStyled.ts"],
      "@constants": ["src/constants"]
    }
  },
  "include": ["src"]
}
