{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components-lib": ["src/components"],
      "@components-lib/*": ["src/components/*"],
      "@typography-lib": ["src/typography"],
      "@typography-lib/*": ["src/typography/*"],
      "@types-lib": ["src/types"],
      "@types-lib/*": ["src/types/*"],
      "@modules-lib": ["src/modules"],
      "@modules-lib/*": ["src/modules/*"],
      "@utils-lib": ["src/utils"],
      "@utils-lib/*": ["src/utils/*"],
      "@containers-lib": ["src/containers"],
      "@containers-lib/*": ["src/containers/*"],
      "@common-lib": ["src/common"],
      "@common-lib/*": ["src/common/*"],
      "@assets-lib": ["src/assets"],
      "@assets-lib/*": ["src/assets/*"],
      "@decorators-lib": ["src/decorators"],
      "@decorators-lib/*": ["src/decorators/*"],
      "@modals-lib": ["src/modals"],
      "@modals-lib/*": ["src/modals/*"],
      "@css-lib": ["src/css"],
      "@css-lib/*": ["src/css/*"],
      "@globalStyled-lib": ["src/globalStyled.ts"],
      "@constants-lib": ["src/constants"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "include": ["src"]
}
