{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "stripInternal": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@typography": ["src/typography"],
      "@typography/*": ["src/typography/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@modules": ["src/modules"],
      "@modules/*": ["src/modules/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@containers": ["src/containers"],
      "@containers/*": ["src/containers/*"],
      "@common": ["src/common"],
      "@common/*": ["src/common/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@decorators": ["src/decorators"],
      "@decorators/*": ["src/decorators/*"],
      "@modals": ["src/modals"],
      "@modals/*": ["src/modals/*"],
      "@css": ["src/css"],
      "@css/*": ["src/css/*"],
      "@globalStyled": ["src/globalStyled.ts"],
      "@constants": ["src/constants"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "include": ["src"]
}
